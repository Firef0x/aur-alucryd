# Contributor: Gustavo Alvarez <sl1pkn07@gmail.com>

pkgname=vapoursynth-plugin-ffms2-git
pkgver=2.19
pkgrel=1
pkgdesc='ffms2 plugin for Vapoursynth'
arch=('i686' 'x86_64')
url='https://github.com/FFMS/ffms2'
license=('GPL')
depends=('ffms2-git' 'vapoursynth')
provides=("${pkgname%-*}")
conflicts=("${pkgname%-*}")

pkgver() {
  printf "%s" "$(pacman -Q ffms2-git | awk '{print $2}' | sed 's/-.*//')"
}

package(){
  install -dm 755 "${pkgdir}"/usr/{lib/${pkgname%%-*},share/licenses}
  ln -s /usr/lib/libffms2.so "${pkgdir}"/usr/lib/${pkgname%%-*}/libffms2.so
  ln -s ffms2 "${pkgdir}"/usr/share/licenses/${pkgname}
}

# vim: ts=2 sw=2 et:
