# Maintainer: alucryd <alucryd at gmail dot com>

pkgname=devtools-alucryd
pkgver=1.0
pkgrel=1
pkgdesc='devtools add-on for convenience'
arch=('any')
license=('GPL')
url='http://projects.archlinux.org/devtools.git/'
depends=('devtools')
source=('pacman-alucryd.conf')
sha256sums=('12b16a491d1f75915e63edc25440f049b5abfe9b4152fdf9744266a3284ac8cc')

package() {
  install -dm 755 "${pkgdir}"/usr/{bin,share/devtools}
  ln -s archbuild "${pkgdir}"/usr/bin/alucryd-i686-build
  ln -s archbuild "${pkgdir}"/usr/bin/alucryd-x86_64-build
  install -m 644 pacman-alucryd.conf "${pkgdir}"/usr/share/devtools/
}

