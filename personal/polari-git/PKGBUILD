# Maintainer: Yosef Or Boczko <yoseforb@gmail.com>

pkgname=polari-git
pkgver=235.6324a84
pkgrel=1
pkgdesc="An IRC Client for GNOME"
arch=('i686' 'x86_64')
url="https://wiki.gnome.org/Apps/Polari"
license=('GPL2')
groups=('gnome')
depends=('desktop-file-utils' 'gjs' 'gnome-icon-theme-symbolic' 'gtk3' 'telepathy-idle')
makedepends=('git' 'gobject-introspection' 'gnome-common' 'intltool')
provides=("${pkgname%-*}")
conflicts=("${pkgname%-*}")
options=('!libtool')
install="${pkgname%-*}.install"
source=('git://git.gnome.org/polari')
sha256sums=('SKIP')

pkgver() {
  cd ${pkgname%-*}

  printf "%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd ${pkgname%-*}

  ./autogen.sh --prefix='/usr' --disable-schemas-compile
  make
}

package() {
  cd ${pkgname%-*}

  make DESTDIR="${pkgdir}" install
}

# vim: ts=2 sw=2 et:
