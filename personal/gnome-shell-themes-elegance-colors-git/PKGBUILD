# Maintainer: alucryd <alucryd at gmail dot com>
# Contributor: xzy3186 <xzy3186 at gmail dot com>

pkgname=gnome-shell-themes-elegance-colors-git
pkgver=2.8
pkgrel=1
pkgdesc='A chameleon theme for GNOME Shell'
arch=('i686' 'x86_64')
url='https://github.com/satya164/elegance-colors'
license=('GPL3')
depends=('bc' 'gnome-shell' 'imagemagick')
makedepends=('git' 'vala')
provides=("${pkgname%-*}")
conflicts=("${pkgname%-*}")
install="${pkgname}.install"
source=("git+https://github.com/satya164/elegance-colors.git")
sha256sums=('SKIP')

build() {
  cd elegance-colors

  make
}

package() {
  cd elegance-colors

  make DESTDIR="${pkgdir}" install
}

