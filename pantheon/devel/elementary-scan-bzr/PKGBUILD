# Maintainer: Alucryd <alucryd at gmail dot com>

pkgname=elementary-scan-bzr
pkgver=606
pkgrel=1
pkgdesc="Simple Scanning Utility"
arch=('i686' 'x86_64')
url="https://launchpad.net/cerbere"
license=('GPL2')
groups=('pantheon')
depends=('desktop-file-utils' 'granite-bzr' 'launchpad-integration-gtk3' 'python2-scour' 'sane')
makedepends=('bzr' 'gnome-common' 'intltool' 'vala>=0.16')
provides=('simple-scan')
conflicts=('simple-scan')
install=${pkgname%-*}.install
source=("bzr+lp:${pkgname%-*}")
sha256sums=('SKIP')

pkgver() {
  cd "${srcdir}"/${pkgname%-*}

  bzr revno
}

build() {
  cd "${srcdir}"/${pkgname%-*}

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}"/${pkgname%-*}

  make DESTDIR="${pkgdir}" install
}

# vim: ts=2 sw=2 et:
