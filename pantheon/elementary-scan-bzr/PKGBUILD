# Maintainer: Alucryd <alucryd at gmail dot com>

pkgname=elementary-scan-bzr
pkgver=38
pkgrel=1
pkgdesc="Simple Scanning Utility"
arch=('i686' 'x86_64')
url="https://launchpad.net/cerbere"
license=('GPL2')
groups=('pantheon')
  depends=('cairo' 'colord' 'dbus-glib' 'dconf' 'gnome-common' 'granite-bzr' 'gtk3' 'intltool' 'libgee' 'libjpeg' 'liblaunchpad-integration' 'lsb-release' 'python2-scour' 'sane' 'zlip')
makedepends=('bzr' 'cmake' 'vala>=0.16')
install=${pkgname}.install

_bzrtrunk=https://code.launchpad.net/~elementary-simple-scan-maintainer/elementary-scan/trunk
_bzrmod=elementary-scan

build() {
  cd "${srcdir}"

# Pull
  msg "Connecting to Bazaar server...."

  if [[ -d ${_bzrmod} ]]; then
    cd ${_bzrmod} && bzr --no-plugins pull ${_bzrtrunk} -r ${pkgver}
    msg "The local files are updated."
  else
    bzr --no-plugins branch ${_bzrtrunk} ${_bzrmod} -q -r ${pkgver}
  fi

  msg "Bazaar checkout done or server timeout"
  msg "Starting build..."

  rm -rf "${srcdir}"/${_bzrmod}-build
  cp -r "${srcdir}"/${_bzrmod} "${srcdir}"/$_bzrmod-build
  cd "${srcdir}"/${_bzrmod}-build

# Build
  if [[ -d build ]]; then
    rm -rf build
  fi
  mkdir build && cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DGSETTINGS_COMPILE=OFF
  make
}

package() {
  cd "${srcdir}"/${_bzrmod}-build/build

# Install
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install
}

# vim: ts=2 sw=2 et:
