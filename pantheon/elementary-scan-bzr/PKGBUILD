# Maintainer: Alucryd <alucryd at gmail dot com>

pkgname=elementary-scan-bzr
pkgver=606
pkgrel=1
pkgdesc="Simple Scanning Utility"
arch=('i686' 'x86_64')
url="https://launchpad.net/cerbere"
license=('GPL2')
groups=('pantheon')
depends=('desktop-file-utils' 'granite-bzr' 'launchpad-integration-gtk3' 'python2-scour' 'sane')
makedepends=('bzr' 'gnome-common-git' 'intltool' 'vala>=0.16')
provides=('simple-scan')
conflicts=('simple-scan')
install=${pkgname}.install

_bzrtrunk=https://code.launchpad.net/~elementary-simple-scan-maintainer/elementary-scan/trunk
_bzrmod=elementary-scan

build() {
  cd "${srcdir}"

# Pull
  msg "Connecting to Bazaar server...."

  if [[ -d ${_bzrmod} ]]; then
    cd ${_bzrmod} && bzr --no-plugins pull ${_bzrtrunk} -r ${pkgver}
    msg "The local files are updated."
  else
    bzr --no-plugins branch ${_bzrtrunk} ${_bzrmod} -q -r ${pkgver}
  fi

  msg "Bazaar checkout done or server timeout"
  msg "Starting build..."

  rm -rf "${srcdir}"/${_bzrmod}-build
  cp -r "${srcdir}"/${_bzrmod} "${srcdir}"/$_bzrmod-build
  cd "${srcdir}"/${_bzrmod}-build

# Build
  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}"/${_bzrmod}-build

# Install
  make DESTDIR="${pkgdir}" install
}

