# Maintainer: Alucryd <alucryd at gmail dot com>

pkgname=cerbere
pkgver=0.1
pkgrel=1
pkgdesc="A simple service to relaunch Pantheon applications such as the panel, dock, wallpaper, etc."
arch=('i686' 'x86_64')
url="https://launchpad.net/cerbere"
license=('GPL2')
groups=('pantheon')
depends=('dconf' 'libgee')
makedepends=('vala' 'cmake')
install=${pkgname}.install
source=("https://launchpad.net/${pkgname}/0.x/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
md5sums=('8e77d0a252088c9b3a03b1207a7cc326')

build() {
	cd "${srcdir}"
	cmake . -DCMAKE_INSTALL_PREFIX=/usr
	make
}

package() {
	cd "${srcdir}"
	make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install
	install -dm 755 "${pkgdir}/etc/xdg/autostart"
	install -m 644 data/cerbere.desktop "${pkgdir}/etc/xdg/autostart/cerbere.desktop"
	echo "OnlyShowIn=GNOME;" >> "${pkgdir}/etc/xdg/autostart/cerbere.desktop"
	echo "AutostartCondition=GNOME3 if-session pantheon" >> "${pkgdir}/etc/xdg/autostart/cerbere.desktop"
}
