# Maintainer: alucryd <alucryd at gmail dot com>

pkgname=lutris
pkgver=0.3.3
pkgrel=1
pkgdesc='Open Gaming Platform'
arch=('any')
url='http://lutris.net/'
license=('GPL3')
depends=('dconf' 'desktop-file-utils' 'hicolor-icon-theme' 'polkit' 'python2-gobject' 'python2-xdg' 'python2-yaml')
makedepends=('python2-setuptools')
install="${pkgname}.install"
source=("${url}/releases/${pkgname}_${pkgver}.tar.gz")
sha256sums=('2c4d2d1a99f02b9dc42515fc908e824a4c505a1200c36c78acbbb383e180c1a9')

prepare() {
  cd ${pkgname}

  sed -i 's|^#!.*python$|#!/usr/bin/python2|' $(grep -rl '^#!.*python')
}

package() {
  cd ${pkgname}

  python2 setup.py install --root="${pkgdir}" --optimize='1'
}

# vim: ts=2 sw=2 et:
