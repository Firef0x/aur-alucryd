# Maintainer: Alucryd <alucryd at gmail dot com>

pkgname=steam-skin-ambiance
pkgver=3.7
pkgrel=1
pkgdesc="Ambiance skin for Steam Linux"
arch=('any')
url="http://iubuntu.cz/Steam/"
license=('GPL3')
depends=('steam')
optdepends=('steam-skin-manager: Easy skin installation')
source=("${pkgname}-${pkgver}.deb::http://iubuntu.cz/Steam/steam-skin-installer.deb")
sha256sums=('2de5b79802891c1bb5ad1c11668c03a5abd9c981623e3f5b3a4d538c94db4ef7')

build() {
  cd ${srcdir}
  tar -xf data.tar.gz
}

package() {
  cd ${srcdir}
  mkdir -p "${pkgdir}"/usr/share/steam/skins
  cp -dr --no-preserve=ownership usr/share/steam/skins/Ambiance "${pkgdir}"/usr/share/steam/skins/

# Fix permissions
  find "${pkgdir}" -type d -exec chmod 755 {} +
  find "${pkgdir}" -type f -exec chmod 644 {} +
}

# vim: ts=2 sw=2 et:
