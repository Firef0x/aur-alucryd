# Maintainer: Alucryd <alucryd at gmail dot com>
# Contributor: Barthalion <aur at bpiotrowski dot pl>

pkgname=vba-m
pkgver=1.8.0.1138
pkgrel=1
pkgdesc="A VBA fork which improves the capatibility and features of the emulator"
arch=('i686' 'x86_64')
url="http://vba-m.com"
license=('GPL')
depends=('desktop-file-utils' 'gtkglextmm' 'hicolor-icon-theme' 'sdl')
makedepends=('cmake' 'nasm')
install='vba-m.install'
source=("http://downloads.sourceforge.net/project/vbam/VBA-M%20svn%20r1138/vbam-${pkgver}-src.tar.gz")
sha256sums=('03fc51d400f17f45eaa38f314077e7dcdae4f4bb2193b6596a2c560b24a1a886')

build() {
  cd "${srcdir}"
  cmake . -DCMAKE_INSTALL_PREFIX=/usr -DENABLE_LINK=OFF -DENABLE_FFMPEG=OFF
  make
}

package() {
  cd "${srcdir}"
  make DESTDIR="${pkgdir}" install
}

